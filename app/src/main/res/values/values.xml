<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="keyboard_row_height">48dp</dimen>
    <dimen name="keyboard_text_size">22sp</dimen>
    <style name="Keyboard"/>
    <style name="Keyboard.Key">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/number_key_bg</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
    </style>
    <style name="Keyboard.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keyboard_row_height</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <declare-styleable name="NumericKeyboard">
        <attr format="reference" name="field"/>
        <attr format="integer" name="fieldMaxLength"/>

        <attr format="dimension" name="keyHeight"/>
        <attr format="dimension" name="keyTextSize"/>
        <attr format="color" name="keyTextColor"/>

        <attr format="string" name="keySpecial"/>
    </declare-styleable>
</resources>