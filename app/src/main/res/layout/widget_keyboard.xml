<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/row1"
        style="@style/Keyboard.Row">

        <TextView
            android:id="@+id/key1"
            style="@style/Keyboard.Key"
            android:text="1" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key2"
            style="@style/Keyboard.Key"
            android:text="2" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key3"
            style="@style/Keyboard.Key"
            android:text="3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/row2"
        style="@style/Keyboard.Row">

        <TextView
            android:id="@+id/key4"
            style="@style/Keyboard.Key"
            android:text="4" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key5"
            style="@style/Keyboard.Key"
            android:text="5" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key6"
            style="@style/Keyboard.Key"
            android:text="6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/row3"
        style="@style/Keyboard.Row">

        <TextView
            android:id="@+id/key7"
            style="@style/Keyboard.Key"
            android:text="7" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key8"
            style="@style/Keyboard.Key"
            android:text="8" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key9"
            style="@style/Keyboard.Key"
            android:text="9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/row4"
        style="@style/Keyboard.Row">

        <TextView
            android:id="@+id/keySpecial"
            style="@style/Keyboard.Key"
            android:text="." />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <TextView
            android:id="@+id/key0"
            style="@style/Keyboard.Key"
            android:text="0" />

        <View
            android:layout_width="10dp"
            android:layout_height="@dimen/keyboard_row_height" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/keyRemove"
            style="@style/Keyboard.Key"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_backspace" />
    </LinearLayout>
</LinearLayout>